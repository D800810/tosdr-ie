<UserControl 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary Source="ApplicationResources.xaml" />
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border x:Name="TOSBorder" BorderBrush="#FFDDE0E2" BorderThickness="0,0,0,1" VerticalAlignment="Top" Height="55">
            <Image Source="{StaticResource Banner}" Margin="10" Stretch="None"/>
        </Border>
        <Frame Source="NoItems.xaml" Grid.Row="1" MinHeight="{Binding Height, ElementName=TOSBorder}"/>
    </Grid>
</UserControl>